{% extends 'base.html.twig' %}

{% block title %}صفحة  {{user.fullName}} {% endblock %}

{% block body %}
    <div class="container" dir="rtl">
        <div class="row align-items-center">
            <div class="col-3 text-center">
            <img src="/images/user_circle.png"class="avatar mb-3" alt="avatar"> <br>
            <span class="badge badge-primary"> {{user.ads | length }} التشكيات </span>
            </div>
            <div class="col-9">
                <h1>{{user.fullName}}</h1>
                {% if user is same as(app.user) %}
                <div class="mt-3">
                    <a href="{{ path('account_profile')}}" class="btn btn-primary mr-2 mb-2"> تغير معلوماتي الخاصة </a>
                    <a href="{{ path('account_password')}}" class="btn btn-primary mb-2"> تغير كلمة السر </a>
                </div>
                {% endif %}
                
            </div>
        </div>
       
        <hr>
        <h2>تشكيات {{user.fullName}}</h2>
    
        {% if user.ads | length > 0 %}
        <div class="row">
            {% for ad in user.ads %}
                {% include 'ad/_ad.html.twig' %}
            {% endfor %}
        </div>
        {% else %}
            <div class="alert alert-warning">
                <p> <strong>{{user.fullName}}</strong> ليس لديه تشكيات</p>
            </div>
        {% endif %}
        
    </div>
{% endblock %}
